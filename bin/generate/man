#!/usr/bin/env bash
set -euo pipefail
cd "$(dirname "$0")/../.."

pages=(bin.1 binconfig.5)
version=${1-v1.2.3}

mkdir -p temp/dist temp/pages
cp src/pandoc.css temp/pages/pandoc.css

for page in "${pages[@]}"; do

    rm -f "temp/dist/$page."*
    rm -f "temp/pages/$page."*

    sed -E "s/\\\$VERSION/$version/g" "src/$page.md" >"temp/dist/$page.md"

    # '+hard_line_breaks' preserves line breaks in the source file
    # '-raw_html' so we don't have to escape '<root>', for example
    # '-smart' prevents '--' being converted to an en-dash
    # Can't use '--shift-heading-level-by -1' while Ubuntu 20.04 is still supported
    sed -E '/^# /d; s/^#(#+) /\1 /' "temp/dist/$page.md" |
        pandoc \
            --standalone \
            --from markdown+hard_line_breaks-raw_html-smart \
            --to man \
            --metadata date="$(date +'%B %Y')" \
            --metadata header='Bin CLI Manual' \
            --metadata footer="Bin CLI $version" \
            --output "temp/dist/$page"

    # Clearing the 'title' var so no <h1> is generated but <title> is still set
    pandoc \
        --standalone \
        --from markdown+hard_line_breaks-raw_html-smart \
        --to html \
        --css 'pandoc.css' \
        --variable title='' \
        "temp/dist/$page.md" \
        --output "temp/pages/$page.html"
done
