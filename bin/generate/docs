#!/usr/bin/env bash
set -euo pipefail
cd "$(dirname "$0")/../.."

sed 's/\[!WARNING]/WARNING:/; s#LICENSE.md#https://github.com/bin-cli/bin-cli/blob/main/LICENSE.md#' README.md |
    pandoc \
        --standalone \
        --from markdown \
        --to html \
        --strip-comments \
        --css 'pandoc-docs.css' \
        --metadata title='Bin CLI' \
        --variable title='' \
        --output 'temp/dist/readme.html'
