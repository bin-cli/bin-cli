#!/usr/bin/env bash
set -euo pipefail
cd "$(dirname "$0")/.."

default_version='1.2.3-dev'
version=${1-$default_version}

if [[ $version = '--help' || $version = '-h' ]]; then
    echo "Usage: ${BIN_COMMAND-$0} [version=$default_version]"
    exit
fi

mkdir -p dist
sed "s/readonly VERSION=.*/readonly VERSION='$version'/" src/bin > dist/bin
chmod +x dist/bin

# Smoke test
dist/bin -v
