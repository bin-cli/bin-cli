#!/usr/bin/env bash
set -euo pipefail
cd "$(dirname "$0")/.."

RESET=$'\e[0m'
LCYAN=$'\e[96m'

to_install=()

sudo() {
    # This is mainly to allow running in Docker
    if [[ $UID -eq 0 ]]; then
        "$@"
    else
        command sudo "$@"
    fi
}

require() {
    local command=$1
    local package=${2-$1}

    printf '%-13s' "$command"

    if command -v "$command" &>/dev/null; then
        echo 'Already installed'
    else
        echo 'Missing'
        to_install+=("$package")
    fi
}

echo "${LCYAN}Checking for missing development dependencies...${RESET}"
require debuild devscripts
require gawk
require inotifywait inotify-tools
require kcov
require npm
require pandoc
require shellcheck
echo

if [[ ${#to_install[@]} -gt 0 ]]; then
    echo "${LCYAN}Installing missing dependencies...${RESET}"
    sudo apt-get update
    echo
    sudo apt-get -y install "${to_install[@]}"
    echo
fi
