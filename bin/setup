#!/usr/bin/env bash
set -euo pipefail
cd "$(dirname "$0")/.."

if [[ ${1-} = '--help' || ${1-} = '-h' ]]; then
    echo "Usage: ${BIN_COMMAND-$0}"
    echo
    echo 'Install dependencies using APT (Ubuntu/Debian)'
    exit
fi

RESET=$'\e[0m'
LCYAN=$'\e[96m'

to_install=()

sudo=
if [[ $UID -gt 0 ]]; then
    sudo='sudo'
fi

require() {
    local command=$1
    local package=${2-$command}

    printf '%-13s' "$command"

    if command -v "$command" &>/dev/null; then
        echo 'Already installed'
    else
        echo 'Missing'
        to_install+=("$package")
    fi
}

echo "${LCYAN}Checking for missing development dependencies...${RESET}"

require curl
require gawk
require inotifywait inotify-tools
require kcov
# Removed npm because I use nvm instead, because the version of Node.js in Ubuntu 22.04 is rather old
#require npm
require shellcheck

echo

if [[ ${#to_install[@]} -gt 0 ]]; then
    echo "${LCYAN}Installing missing dependencies...${RESET}"
    $sudo apt-get update
    echo
    $sudo apt-get -y install "${to_install[@]}"
    echo
fi
