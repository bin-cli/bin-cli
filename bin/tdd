#!/usr/bin/env bash
set -o errexit -o nounset -o pipefail
cd "$(dirname "$0")/.."

while true; do
    clear

    bin/test "$@" || true

    inotifywait \
        -e create \
        -e modify \
        -e move \
        -e attrib \
        -e delete \
        -qq \
        -r bin/build features src
done
