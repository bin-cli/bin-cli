[build]
help = Generate a build of Bin into temp/dist/

[check-readme-links]
help = Check for broken links in the README

[cucumber]
help = Run Cucumber.js directly

[dev]
alias = d
help = Build and run the latest development version of Bin

[generate deb]
help = Generate a Debian package (.deb) in the parent directory

[generate readme]
help = Update the README file from the files in features/

[generate readme-html]
help = Generate a HTML version of the README file in temp/dist/

[generate man]
help = Generate a Bin CLI man page in temp/dist/

[man]
help = Generate and display a Bin CLI man page

[release]
alias = deploy
help = Create a new release of Bin with the given version number

[setup]
help = Install development dependencies (on Ubuntu)

[simple-test]
help = Build and run only a few simple tests - mainly used as smoke tests on Windows

[watch]
alias = tdd
help = Watch for changes to source files, run all tests automatically and update the README

[test]
help = Build and run tests, and display debugging information if it fails
